<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pet Profile Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Pet Profile Management</h2>

        <!-- Pet Form -->
        <form id="petForm">
            <div class="mb-3">
                <label for="name" class="form-label">Pet Name</label>
                <input type="text" class="form-control" id="name" required>
            </div>
            <div class="mb-3">
                <label for="ownerName" class="form-label">Owner Name</label>
                <input type="text" class="form-control" id="ownerName">
            </div>
            <button type="submit" class="btn btn-primary">Generate QR Code</button>
        </form>

        <!-- QR Code Display -->
        <div id="qrCodeContainer" class="mt-4 text-center" style="display: none;">
            <h4>QR Code for Your Pet</h4>
            <img id="qrCodeImage" src="" alt="QR Code" class="img-thumbnail">
        </div>
    </div>

    <script>
        $("#petForm").submit(function(event) {
            event.preventDefault();

            let petData = {
                name: $("#name").val(),
                ownerName: $("#ownerName").val()
            };

            $.ajax({
                url: "https://localhost:5001/api/pet/add",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify(petData),
                success: function(response) {
                    $("#qrCodeContainer").show();
                    $("#qrCodeImage").attr("src", "data:image/png;base64," + response.pet.qrCodeUrl);
                },
                error: function(error) {
                    alert("Error adding pet: " + error.responseJSON.message);
                }
            });
        });
    </script>
</body>
</html>
