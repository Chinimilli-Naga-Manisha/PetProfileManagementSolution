@model PetProfileManagementFrontend.Models.Pet

<div class="container my-5">
    <h2 class="text-center mb-4 text-danger">Delete Pet</h2>

    <div class="alert alert-warning text-center">
        <h4 class="alert-heading">Warning!</h4>
        <p>
            Are you sure you want to delete the pet <strong>@Model.Name</strong>
            <em>(Species: @Model.Species, Breed: @Model.Breed, Age: @Model.Age years old, Color: @Model.Color, Date of Birth: @Model.DateOfBirth.ToString("yyyy-MM-dd"))</em>
            owned by <strong>@Model.OwnerName</strong>?
        </p>
        <hr>
        <p class="mb-0">This action is irreversible.</p>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <div class="d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-danger btn-lg mr-3" onclick="return confirm('Are you sure you want to delete this pet?')">
                <i class="bi bi-trash-fill"></i> Delete Pet
            </button>
            <a href="@Url.Action("Index", "Pet")" class="btn btn-secondary btn-lg">
                <i class="bi bi-arrow-left-circle"></i> Cancel
            </a>
        </div>
    </form>
</div>

<!-- Bootstrap Icons CDN (Optional, for icon usage) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
