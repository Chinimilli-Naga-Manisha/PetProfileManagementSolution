 @model PetProfileManagementFrontend.Models.LoginModel

@section Styles {
    <style>
        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f4;
        }

        .login-card {
            background: white;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 350px;
            text-align: center;
        }

        h2 {
            margin-bottom: 20px;
        }

        .form-group {
            text-align: left;
            margin-bottom: 15px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }

        .btn-primary {
            background: #007bff;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            width: 100%;
            max-width: 200px;
            display: block;
            margin: 10px auto;
        }

            .btn-primary:hover {
                background: #0056b3;
            }
    </style>
}

<div class="login-container">
    <div class="login-card">
        <h2 class="text-center mb-4">Login</h2>

        @if (!string.IsNullOrEmpty(Model?.ErrorMessage))
        {
            <div class="alert alert-danger text-center">@Model.ErrorMessage</div>
        }

        <form method="post">
            <div class="form-group">
                <label>Email:</label>
                <input type="email" asp-for="Email" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Password:</label>
                <input type="password" asp-for="Password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
    </div>
</div>
